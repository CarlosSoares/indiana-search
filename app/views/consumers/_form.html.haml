= form_for([@project, @consumer]) do |f|
  - if @consumer.errors.any?
    #error_explanation
      %h2
        = pluralize(@consumer.errors.count, "error")
        prohibited this consumer from being saved:

      %ul
        - @consumer.errors.full_messages.each do |message|
          %li= message

  .panel-body
    .form-group
      = f.label :name, class: 'col-sm-3 control-label'
    .col-md-9
      = f.text_field :name, class: "form-control"

  .clearfix.right
    = f.submit class: 'btn btn-primary mr5'
